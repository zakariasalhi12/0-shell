{
  "environment": {
    "PATH": "/usr/local/bin:/usr/bin:/bin:/home/user/.local/bin",
    "EDITOR": "nvim",
    "PAGER": "less"
  },
  "aliases": {
    "ll": "ls -la --color=auto",
    "g": "git",
    "..": "cd .."
  },
  "commands": {
    "python": {
      "path": "/usr/local/bin/python3.11",
      "override_system": true
    },
    "docker": {
      "path": "/usr/bin/docker-ce"
    }
  },
  "shortcuts": {
    "mytool": "~/.local/bin/myscript.sh",
    "dev": "cd ~/projects && ls"
  },
  "ui": {
    "prompt": {
      "format": "{\\user}{@\\host}:{\\cwd} {\\git_branch} Î» ",
      "styles": {
        "user": {"color": "#FF79C6", "bold": true},
        "host": {"color": "#50FA7B"},
        "cwd": {"color": "#8BE9FD", "italic": true},
        "git_branch": {"color": "#F1FA8C"},
        "symbol": {"color": "#FF5555"}
      }
    },
    "syntax_highlighting": {
      "commands": {"color": "#8BE9FD"},
      "arguments": {"color": "#F8F8F2"},
      "strings": {"color": "#F1FA8C"},
      "errors": {"color": "#FF5555", "bold": true}
    },
    "theme": "dracula",
    "transparency": 0.9
  },
  "behavior": {
    "history": {
      "size": 5000,
      "ignore_duplicates": true,
      "timestamp_format": "%Y-%m-%d %H:%M"
    },
    "completion": {
      "fuzzy": true,
      "case_sensitive": false,
      "show_preview": true
    },
    "keybindings": {
      "Ctrl+R": "reverse_history_search",
      "Ctrl+Space": "autocomplete",
      "Alt+ArrowLeft": "backward_word",
      "Alt+ArrowRight": "forward_word"
    }
  },
  "plugins": [
    "git-integration",
    "weather",
    "docker-helper"
  ],
  "startup_commands": [
    "neofetch",
    "echo 'Welcome to my custom shell!'"
  ]
}